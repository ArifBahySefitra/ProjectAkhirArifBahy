<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kategori"
    tools:context=".kategori"
    tools:ignore="SpeakableTextPresentCheck">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="77dp"
            android:orientation="vertical"
            android:padding="40dp">

        </LinearLayout>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile"/>


        <ImageView
            android:id="@+id/dipukul1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/dipukulbg"/>

        <ImageView
            android:id="@+id/dipetik1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/dipetik"/>

        <ImageView
            android:id="@+id/digesek1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/digesek"/>



        <ImageView
            android:id="@+id/ditiup1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/ditiup"/>


        <ImageView
            android:id="@+id/ditepuk1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="490dp"
            android:background="@drawable/ditepuk"/>

        <ImageView
            android:id="@+id/digoyang1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="490dp"
            android:background="@drawable/digoyang"/>


    </RelativeLayout>

</ScrollView>